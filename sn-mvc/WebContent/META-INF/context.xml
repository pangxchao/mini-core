<?xml version="1.0" encoding="UTF-8"?> <!DOCTYPE Context>
<Context reloadable="true">
	<Resource name="jdbc/sn-mini" auth="Container" type="javax.sql.DataSource" maxTotal="10" maxIdle="3"
		maxWaitMillis="10000" username="root" password="Qwe123456!" driverClassName="com.mysql.jdbc.Driver" testWhileIdle="true"
		validationQuery="select 1" url="jdbc:mysql://192.168.1.200:3306/cm?characterEncoding=utf-8" />

	<!-- 配置项目编码 -->
	<Parameter name="encoding" value="UTF-8" />
	<!-- 配置项目生成主键时的机器码 -->
	<Parameter name="worker-id" value="12" />

	<!-- 文件上传缓冲区大小 -->
	<Parameter name="file.size.threshold" value="4096" />
	<!-- 单次请求上传最大文件限制 -->
	<Parameter name="max.request.size" value="-1" />
	<!-- 单个文件最大限制 -->
	<Parameter name="max.file.size" value="-1" />
	<!-- 文件上传临时目录 -->
	<Parameter name="multipart.location" value="/temp" />

	<!-- 配置jdbc数据源连接名称，多数据源用,号分隔 -->
	<Parameter name="dao-names" value="dao" />
	<!-- jdbc数据库db指向的jndi名称， tomcat jndi名称需要加‘java:/comp/env/’前缀 -->
	<Parameter name="dao" value="java:/comp/env/jdbc/sn-mini" />

	<!-- 配置定时任务的类名(包名+类名完整名称)，多个类名用，号分隔 -->
	<!-- <Parameter name="task-classes" value="test.Task1, test.Task2" /> -->
	<!-- 定时任务test.Task1 规则配置， 多个规则用|分隔 -->
	<!-- <Parameter name="test.Task1" value="* * * * * | 0 0 2 * *" /> -->

	<!-- 自定义初始化参数 -->
	<Parameter name="privateFilePath" value="d:/imgs_/" />
	<Parameter name="publicFilePath" value="d:/imgs/" />
	<Parameter name="publicFileUrl" value="/imgs/" />

</Context>
